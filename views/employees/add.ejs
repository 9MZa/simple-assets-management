<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css"
    />
    <title>Employee Add</title>
  </head>
  <body>
    <% if (messages.error) { %>
    <article class="message is-danger">
      <div class="message-body"><%= messages.error %></div>
    </article>
    <% } %>
    <div class="container">
      <section class="section">
        <div class="title is-2 has-text-centered">Add Employee</div>
      </section>
      <!-- Form -->
      <div class="columns is-centered">
        <div class="column is-half">
          <form action="/employees/add" method="post" class="field">
            <label class="label">Name</label>
            <div class="control">
              <input class="input" name="name" type="text" placeholder="Name" />
            </div>
            <div class="field is-grouped mt-5 is-justify-content-center">
              <div class="control">
                <button type="submit" class="button is-link" value="Add">
                  Submit
                </button>
              </div>
              <a href="/employees/" class="button">Back</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
