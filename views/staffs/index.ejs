<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css"
    />
    <title>Staff</title>
  </head>
  <body>
    <div class="container">
      <div class="navbar mt-5">
        <div class="navbar-menu">
          <div class="navbar-start">
            <h1 class="title">Staff</h1>
          </div>
          <div class="navbar-end">
            <a href="/staffs/add" class="button is-normal is-primary"> Add </a>
          </div>
        </div>
      </div>
      <% if(data.length) { %>
      <table class="table is-hoverable is-fullwidth">
        <thead>
          <tr class="has-text-centered">
            <th class="">ID</th>
            <th class="">Name</th>
            <th class="">Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < data.length; i++) { %>
          <tr class="has-text-centered">
            <td class=""><%= data[i].id %></td>
            <td class=""><%= data[i].name %></td>
            <td>
              <a
                href="../staffs/edit/<%= data[i].id %>"
                class="button is-small is-info is-light"
                >Edit</a
              >
              <a
                href="../staffs/delete/<%= data[i].id %>"
                onclick="return checkMe()"
                class="button is-small is-danger is-light"
                >Delete</a
              >
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <% } %>
    </div>
    <div class="container">
      <% if (!data.length) { %>
      <article class="message is-info">
        <div class="message-body has-text-centered">No data in row.</div>
      </article>
      <% } %>
    </div>
    <div class="container mt-5">
      <div class="has-text-centered">
        <a href="/" class="button is-link"> Home </a>
      </div>
    </div>
    <script language="javascript">
      function checkMe() {
        if (confirm("Are you sure ?")) {
          return true;
        } else {
          return false;
        }
      }
    </script>
  </body>
</html>
